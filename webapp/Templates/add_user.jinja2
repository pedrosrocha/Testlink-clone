{% extends 'base.jinja2' %}

{% block content %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="{{ url_for('static', filename='Styles/add_user.css') }}">


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <div class="card shadow-lg border-0 rounded-lg auth-card">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill text-primary" style="font-size: 3.5rem;"></i>
                        <h1 class="h3 mt-3">Create an Account</h1>
                        <p class="text-muted small">Fill out the form below to add a new user.</p>
                    </div>

                    <form id="add-user-form" method="POST">
                        <div class="form-floating mb-3">
                            <input id="username" name="username" placeholder="Username" class="form-control" required>
                            <label for="username">Username</label>
                            <span id="username-error" class="text-danger small" style="display:none;"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input id="email" name="email" type="email" placeholder="Email" class="form-control"
                                required>
                            <label for="email">Email</label>
                            <span id="email-error" class="text-danger small" style="display:none;"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input id="password" name="password" type="password" placeholder="Password"
                                class="form-control" required>
                            <label for="password">Password</label>
                            <span id="password-error" class="text-danger small" style="display:none;"></span>
                        </div>

                        {% with messages = get_flashed_messages(with_categories=true) %}
                        {% if messages %}
                        <div class="alert alert-danger small p-2 text-center" role="alert">
                            {% for category, message in messages %}
                            {{ message }}
                            {% endfor %}
                        </div>
                        {% endif %}
                        {% endwith %}

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Add User</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        Already have an account? <a href="{{url_for('auth.login')}}">Go to Login</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="{{ url_for('static', filename='Scripts/add_user.js') }}"></script>

{% if error_message %}
<script> alert("{{ error_message }}"); </script>
{% endif %}

{% endblock %}