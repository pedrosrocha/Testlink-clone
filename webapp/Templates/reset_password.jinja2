{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4 bg-primary">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class.card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1>Reset {{username}}'s password</h1>
                        <div>
                            <a href="{{url_for('auth.MainPage')}}" class="btn btn-secondary">Home</a>
                            <a href="{{url_for('users_views.UsersManagement')}}" class="btn btn-secondary">Users Management</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form id="reset-password-form" method="POST">
                        <input type="hidden" name="action" value="reseter">
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New password</label>
                            <input id="newPassword" name="newPassword" placeholder="New password" type="password" class="form-control">
                            <span id="newPassword-error" class="text-danger" style="display:none;"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% with messages = get_flashed_messages() %}
{% for message in messages %}
<p class="text-danger">{{ message }}</p>
{% endfor %}
{% endwith %}

<script src="{{ url_for('static', filename='Scripts/reset_password.js') }}"></script>

{% endblock %}
