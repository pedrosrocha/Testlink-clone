{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jstree/dist/themes/default/style.min.css" />
<link rel="stylesheet" href="{{ url_for('static', filename='Styles/test_specification.css') }}">

<div class="container-fluid vh-100 d-flex flex-column p-0">

    <div id="page-title" class="card mb-3 mt-2">
        <h1 style="font-size: 34px;">Test Specification</h1>
    </div>

    <div id="left-pane-container" class="row g-0 p-0 mb-5 flex-grow-1 shadow-sm">
        <div id="left-pane" class="card mt-0 p-1" style="width: 300px;">
            <div class="filter p-2">
                <h4>Filters</h4>
            </div>
            <div class="tree-pane">
                <div id="testTree"></div>
            </div>
        </div>
        <div id="divider" class="bg-secondary"></div>

        <div id="details-pane" class="col ms-2 mt-0">
            <h2>Project Details</h2>
            <p class="text-muted">Select a test suite or test case from the tree to see its details.</p>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jstree@3.3.12/dist/jstree.min.js"></script>
<!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> <!-->

<script src="{{ url_for('static', filename='Scripts/test_specification.js') }}"></script>


{% endblock %}