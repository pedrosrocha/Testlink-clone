{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1>Edit Project</h1>
        </div>
        <div class="card-body">
            <form id="edit-project-form" method="POST">
                <div class="mb-3">
                    <label for="project_name" class="form-label">Project Name</label>
                    <input id="project_name" name="project_name" value="{{project['name']}}" class="form-control">
                    <span id="project-name-error" class="text-danger" style="display:none;"></span>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-control"
                        rows="5">{{project['description']}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="active" {% if project['status']=='active' %} selected {%endif%}>Active</option>
                        <option value="inactive" {% if project['status']=='inactive' %} selected {%endif%}>Inactive
                        </option>
                        <option value="archived" {% if project['status']=='archived' %} selected {%endif%}>Archived
                        </option>
                    </select>
                </div>

                <input type="hidden" name="action" value="editing">
                <button type="submit" class="btn btn-primary">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}