{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ url_for('static', filename='Styles/open_project.css') }}">

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1>Project Information</h1>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Name:</b> {{project['name']}}</li>
                <li class="list-group-item"><b>Id:</b> {{project['id']}}</li>
                <li class="list-group-item"><b>Status:</b>
                    <span class="badge bg-info text-dark">{{project['status']}}</span>
                </li>
                <li class="list-group-item"><b>Created by:</b> {{project['owner_name']}}</li>
                <li class="list-group-item"><b>Start Date:</b> {{project['start_date']}}</li>
                <li class="list-group-item"><b>End Date:</b> {{project['end_date']}}</li>
                <li class="list-group-item"><b>Created at:</b> {{project['created_at']}}</li>
                <li class="list-group-item"><b>Last updated at:</b> {{project['updated_at']}}</li>
                <li class="list-group-item"><b>Description:</b> {{project['description']}}</li>
            </ul>
        </div>
        <div class="card-footer">
            <form method="GET" style="display: inline"
                action="{{url_for('projects_views.EditProject', project_id=project['id'])}}">
                <input type="hidden" name="action" value="editing">
                <input type="hidden" name="id" value="{{project['id']}}">
                {%if user.user_level == 'admin'%}
                <button type="submit" class="btn btn-primary">Edit project</button>
                {%endif%}
            </form>
        </div>
    </div>
</div>

{% with messages = get_flashed_messages() %}
{% for message in messages %}
<p class="text-danger">{{ message }}</p>
{% endfor %}
{% endwith %}

{% endblock %}