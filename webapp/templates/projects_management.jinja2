{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ url_for('static', filename='styles/project_management.css') }}">

<div class="container-fluid vh-100 d-flex flex-column p-3">

    <div id="page-title" class="card mb-3 mt-2 shadow">
        <h1 style="font-size: 34px; text-align: center;">Project Management System</h1>
    </div>

    <div class="card flex-grow-1 p-3 shadow" id="project-container">
        {% if current_user.user_level == 'admin' %}
        <div class="mb-3">
            <a href="/AddProject" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New Project
            </a>
        </div>
        {% endif %}

        <h2 class="h4">Projects:</h2>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="">
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Owner</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        {% if current_user.user_level == 'admin' %}
                        <th>Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects %}
                    <tr>
                        <td hidden>{{ project['id'] }}</td>
                        <td><a href="{{url_for('projects_views.OpenProject', project_id=project['id'])}}">{{
                                project['name'] }}</a></td>
                        <td><span class="badge bg-secondary">{{ project['status'] }}</span></td>
                        <td>{{ project['owner_name'] }}</td>
                        <td>{{ project['start_date'] }}</td>
                        <td>{{ project['end_date'] }}</td>
                        <td>{{ project['created_at'] }}</td>
                        <td>{{ project['updated_at'] }}</td>
                        {% if current_user.user_level == 'admin' %}
                        <td>
                            <form method="POST" style="display:inline"
                                onsubmit="return confirm('Are you sure that you want to delete {{project['name']}}? This action will delete all tests related to {{project['name']}}')">
                                <input type="hidden" name="action" value="deletion">
                                <input type="hidden" name="id" value="{{ project['id'] }}">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="{{ url_for('static', filename='scripts/projects_management.js') }}"></script>

{% if error_message %}
<script>
    alert("{{ error_message }}");
</script>
{% endif %}

{% endblock %}