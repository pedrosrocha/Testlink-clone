{% extends 'base.jinja2' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="{{ url_for('static', filename='styles/users_management.css') }}">

<div class="container-fluid vh-100 d-flex flex-column p-3">

    <div id="page-title" class="card mb-3 mt-2 shadow">
        <h1 style="font-size: 34px; text-align: center;">User Management System</h1>
    </div>

    <div class="card flex-grow-1 p-3 shadow" id="user-container">


        <h2 class="h4">Users:</h2>

        <div class="table">
            <table class="table table-hover">
                <thead class="bg-primary text-white">
                    <tr class="">
                        <th>Username</th>
                        <th>Email</th>
                        <th>User Level</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user['username'] }}</td>
                        <td>{{ user['email'] }}</td>


                        {% if current_user.user_level == 'admin'%}
                        <td>
                            <form method="POST" style="display:inline;">
                                <input type="hidden" name="id" value="{{ user['id'] }}">
                                <input type="hidden" name="action" value="change_level">
                                <select name="new_level" class="form-select form-select-sm"
                                    onchange="this.form.submit()">
                                    <option value="viewer" {% if user['user_level']=='viewer' %}selected{% endif %}>
                                        Viewer</option>
                                    <option value="admin" {% if user['user_level']=='admin' %}selected{% endif %}>Admin
                                    </option>
                                    <option value="editor" {% if user['user_level']=='editor' %}selected{% endif %}>
                                        Editor</option>
                                </select>
                            </form>
                        </td>
                        <td>
                            <form method="POST" style="display: inline"
                                onsubmit="return confirm('Do you really want to delete the user {{user['username']}}?')">
                                <input type="hidden" name="action" value="deletion">
                                <input type="hidden" name="id" value="{{user['id']}}">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <a href="{{url_for('users_views.ResetUserPassword', username=user['username'])}}"
                                class="btn btn-warning btn-sm">Reset Password
                            </a>
                        </td>
                        {%else%}
                        <td>{{ user['user_level'] }}</td>
                        {% if current_user.username == user['username'] %}
                        <td>
                            <a href="{{url_for('users_views.ResetUserPassword', username=user['username'])}}"
                                class="btn btn-warning btn-sm">Reset Password
                            </a>
                        </td>
                        {% endif %}

                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="mb-0">
            {% if not current_user.user_level == 'viewer' %}
            <a href="/AddUserFromManager" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>New User
            </a>
            {%endif%}
        </div>
    </div>
</div>

{% if error_message %}
<script>
    alert("{{ error_message }}");
</script>
{% endif %}

<script src="{{ url_for('static', filename='scripts/users_management.js') }}"></script>

{% endblock %}